{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "declaration": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "@/*": ["./resource/*"],
      "node-fetch": ["./resource/types/@types/node-fetch.d.ts"]
    }
  },
  "include": ["./resource/**/*.ts", "./jest.config.ts"],
  "exclude": ["node_modules"]
}
